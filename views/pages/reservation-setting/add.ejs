<body>
  <!-- Sidenav -->
  <% include ../../partials/sidebar %>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->
    <% include ../../partials/navbar %>
    <!-- Header -->
    <% include ../../partials/header %>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        <div class="col-xl-12 order-xl-1">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">予約追加</h3>
                </div>
              </div>
            </div>
            <div class="card-body">
              <form action="/reservation-setting/add" method="POST" id="add-reservation-setting">
                <h6 class="heading-small text-muted mb-4">予約情報</h6>
                <div class="pl-lg-4">
                  <% if (locals.messages && locals.messages.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                      <%= locals.messages.success %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                      </button>
                    </div>
                  <% } %>
                  <% if (locals.messages && locals.messages.errors && locals.messages.errors.databaseError) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <%= locals.messages.errors.databaseError %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                      </button>
                    </div>
                  <% } %>
                  <% if (locals.messages && locals.messages.errors && locals.messages.errors.reservation) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <%= locals.messages.errors.reservation %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                      </button>
                    </div>
                  <% } %>
                  <div class="row">
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-url">予約コード</label>
                        <input type="text" id="input-reservation-code" class="form-control form-control-alternative" name="reservation_code" placeholder="例：abc123" value="" required>
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-email">予約経由（サイト）</label>
                        <select class="custom-select" name="site_id" form="add-reservation-setting">
                          <% siteData.forEach(site => { %>
                            <option value="<%= site.id %>"><%= site.id %>. <%= site.name %></option>
                          <% }) %>
                        </select>
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-firstname">名</label>
                        <input type="text" id="input-firstname" class="form-control form-control-alternative" name="reservation_guest_first_name" placeholder="例：太郎" value="" required>
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-lastname">姓</label>
                        <input type="text" id="input-lastname" class="form-control form-control-alternative" name="reservation_guest_last_name" placeholder="例：山田" value="" required>
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">ホテル</label>
                        <select class="custom-select" name="hotel_id" form="add-reservation-setting">
                          <% hotelData.forEach(hotel => { %>
                            <option value="<%= hotel.id %>"><%= hotel.id %>. <%= hotel.name %></option>
                          <% }) %>
                        </select>
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">予定入室 ~ 予定退室</label>
                        <div class="input-daterange datepicker row align-items-center">
                          <div class="col">
                            <div class="form-group">
                              <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                  <span class="input-group-text"><i class="ni ni-calendar-grid-58"></i></span>
                                </div>
                                <input class="form-control" name="reservation_start_date" placeholder="Start date" type="text" value="" autocomplete="off" required>
                              </div>
                            </div>
                          </div>
                          <div class="col">
                            <div class="form-group">
                              <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                  <span class="input-group-text"><i class="ni ni-calendar-grid-58"></i></span>
                                </div>
                                <input class="form-control" name="reservation_end_date" placeholder="End date" type="text" value="" autocomplete="off" required>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-phone-number">電話番号</label>
                        <input type="tel" id="input-phone-number" class="form-control form-control-alternative" name="reservation_guest_phone_number" placeholder="例：0123456789" value="" required>
                      </div>
                    </div>
                    <div class="col-lg-12 text-center">
                      <button class="btn btn-success mt-4 mb-4">追加</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Footer -->
      <% include ../../partials/footer %>
    </div>
  </div>

  <!-- Include scripts -->
  <% include ../../partials/scripts %>
</body>
