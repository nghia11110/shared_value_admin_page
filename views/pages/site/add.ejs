<body>
  <!-- Sidenav -->
  <% include ../../partials/sidebar %>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->
    <% include ../../partials/navbar %>
    <!-- Header -->
    <% include ../../partials/header %>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        <div class="col-xl-8 order-xl-1">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">サイト追加</h3>
                </div>
              </div>
            </div>
            <div class="card-body">
              <form action="/site/add" method="POST">
                <h6 class="heading-small text-muted mb-4">サイト情報</h6>
                <div class="pl-lg-4">
                  <% if (locals.messages && locals.messages.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                      <%= locals.messages.success %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                      </button>
                    </div>
                  <% } %>
                  <% if (locals.messages && locals.messages.errors && locals.messages.errors.databaseError) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <%= locals.messages.errors.databaseError %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                      </button>
                    </div>
                  <% } %>
                  <div class="row">
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">サイト名</label>
                        <input type="text" id="input-name" class="form-control form-control-alternative" name="sitename" placeholder="例：rakuten" value="">
                        <% if (locals.messages && locals.messages.errors && locals.messages.errors.name) { %>
                          <strong class="invalid-feedback" style="display: block"><%= locals.messages.errors.name %></strong>
                        <% } %>
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-email">Key Name</label>
                        <input type="text" id="input-email" class="form-control form-control-alternative" name="keyname" placeholder="例：rakuten" value="">
                        <% if (locals.messages && locals.messages.errors && locals.messages.errors.username) { %>
                          <strong class="invalid-feedback" style="display: block"><%= locals.messages.errors.username %></strong>
                        <% } %>
                      </div>
                    </div>
                    <div class="col-lg-12">
                      <div class="form-group">
                        <label class="form-control-label" for="input-url">URL</label>
                        <input type="url" id="input-url" class="form-control form-control-alternative" name="url" placeholder="例：https://travel.rakuten.co.jp/" value="">
                        <% if (locals.messages && locals.messages.errors && locals.messages.errors.username) { %>
                          <strong class="invalid-feedback" style="display: block"><%= locals.messages.errors.username %></strong>
                        <% } %>
                      </div>
                    </div>
                    <div class="col-lg-12 text-center">
                      <button class="btn btn-success mt-4 mb-4">追加</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Footer -->
      <% include ../../partials/footer %>
    </div>
  </div>

  <!-- Include scripts -->
  <% include ../../partials/scripts %>
</body>
